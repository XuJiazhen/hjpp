.pic {
	width: 100%;
	height: 100%;
}

.projects {
	display: flex;
	flex-direction: column;
	padding: 0 20rpx;
	margin-top: 10px;
	margin-bottom: 10px;
}

.project {
	display: flex;
	justify-content: space-between;
	background-color: #ffffff;
	border-bottom: 1px solid #f8f8f8;
	padding: 5px 0;
	border-radius: 3px;
	overflow: hidden;
	font-size: 14px;
}

.project:last-child {
	border-bottom: none;
}

.project .left {
	width: 224rpx;
	height: 152rpx;
	border-radius: 3px;
	overflow: hidden;
	margin-right: 10px;
	position: relative;

}

.project .middle {
	flex: 2;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.project .middle .location {
	font-size: 12px;
}

.project .middle .keyword {
	font-size: 12px;
	border: 1px solid #568690;
	border-radius: 3px;
	padding: 2px 4px;
	color: #568690;
}

.keyword {
	margin-right: 3px;
}

.keyword:last-child {
	margin-right: 0;
}

.project .right {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-end;
}

.right .title {
	width: 100%;
}

.right .price {
	color: #ff5b5c;
	font-weight: bold;
}