<view class="container">
	<view class="welcome">
		<text>嗨，你好</text>
		<text>欢迎登记慧建房拼拼</text>
	</view>
	<view class="row name">
		<input type="text" placeholder="请输入真实姓名" maxlength="10" placeholder-style="font-size: 14px;" value="{{ name }}" bind:input="onInputName" />
	</view>
	<view class="row phone">
		<input type="number" placeholder="请输入电话号码" maxlength="11" placeholder-style="font-size: 14px;" value="{{ phone }}" bind:input="onInputPhone" />
		<button class="get-phone" size="mini" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">获取手机号</button>
	</view>
	<button class="cus-btn submit" bind:tap="onSubmit">提交</button>
	<button class="cus-btn clear" bind:tap="onClear">清空</button>
</view>