.container {
	padding: 0 10px;
	display: flex;
	flex-direction: column;
}

.welcome {
	display: flex;
	flex-direction: column;
	font-size: 24px;
	color: #568690;
	font-weight: bold;
	margin-bottom: 10%;
}

.row {
	width: 100%;
	height: 50px;
	border-bottom: 1px solid #e1e4e8;
	margin-bottom: 10px;
	display: flex;
	font-size: 14px;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
}

.row input {
	flex: 1;
}


.cus-btn {
	flex: 1;
	width: 100% !important;
	height: 50px;
	color: #ffffff;
	margin: 0 !important;
	font-weight: normal;
	margin-bottom: 10px !important;
}

.get-phone {
	color: #ffffff;
	background-color: #568690;
	margin: 0;
	font-weight: normal;
	font-size: 14px !important;
}

.submit {
	background-color: #568690;
}

.clear {
	background-color: #935557;
}