@import '/assets/styles/iconfont.wxss';

.container {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.pic {
	width: 100%;
	height: 100%;
}

.main-title {
	padding: 0 20rpx;
	font-size: 20px;
	color: #568690;
	margin-bottom: 10px;
	font-weight: bold;
}

.detail {
	padding: 0 20rpx;
}

.detail .row {
	width: 100%;
	border-bottom: 1px solid #f8f8f8;
	padding: 10px 0;
	font-size: 14px;
}

.detail .row:last-child {
	border-bottom: none;
}

.detail .row-label {
	color: #808080;
}

.user-group {
	display: flex;
	flex-direction: column;
	justify-content: center;
	border-top: 10px solid #f8f8f8;
	border-bottom: 10px solid #f8f8f8;
}

.captain-brief,
.member-info {
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	font-size: 14px;
}

.brief-title,
.member-title {
	color: #568690;
	padding: 5px 0;
	border-bottom: 1px solid #f8f8f8;
}

.brief-content,
.member-content {
	padding: 5px 0;
}

.member-content {
	display: flex;
	align-items: center;
}

.member-info .avatar {
	width: 90rpx;
	height: 90rpx;
	overflow: hidden;
	border-radius: 50%;
	margin-left: -30rpx;
}

.member-info .avatar:first-child {
	margin-left: 0;
}

.other {
	display: flex;
	flex-direction: column;
	justify-content: center;
	font-size: 14px;
	padding-bottom: 70px;
}

.other-top {
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #f8f8f8;
	padding: 5px 0;
	margin: 0 20rpx;
}

.top-left .text {
	color: #568690;
}

.top-right {
	color: #808080;
}

.fixed-bottom {
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 999;
	width: 100%;
	height: 70px;
	border-top: 1px solid #f8f8f8;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
	overflow: hidden;
	background-color: #ffffff;
}

.captain {
	display: flex;
	align-items: center;
	width: 40%;
}

.captain .avatar {
	width: 90rpx;
	height: 90rpx;
	overflow: hidden;
	border-radius: 50%;
	margin-right: 20rpx;
}

.info {
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.info-name {
	font-size: 16px;
	font-weight: bold;
}

.info-label {
	font-size: 14px;
	color: #808080;
}

.btns {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 60%;
}

.btn {
	color: #ffffff;
	font-size: 16px;
	font-weight: normal;
	border-radius: 0;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-radius: 4px;
	width: 48% !important;
	margin: 0 !important;
}

.btn .icon {
	font-size: 18px !important;
}

.btn-call {
	background-color: #fd911f;
}

.btn-invite {
	background-color: #568690;
}