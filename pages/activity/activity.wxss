@import '/assets/styles/iconfont.wxss';

.container {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.pic {
	width: 100%;
	height: 100%;
}

.main-title {
	margin-top: 15px;
	padding: 0 20rpx;
	font-size: 16px;
	color: #568690;
	font-weight: bold;
}

.detail {
	padding: 0 20rpx;
}

.detail .row {
	width: 100%;
	border-bottom: 1px solid #f8f8f8;
	padding: 10px 0;
	font-size: 14px;
}

.detail .row:last-child {
	border-bottom: none;
}

.detail .row-label {
	color: #808080;
}

.user-group {
	padding: 10px 0;
	display: flex;
	flex-direction: column;
	justify-content: center;
	border-top: 10px solid #f8f8f8;
	border-bottom: 10px solid #f8f8f8;
}

.user-group .info {
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	font-size: 14px;
}

.info .header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10px;
}

.header-left {
	font-size: 16px;
	color: #568690;
	font-weight: bold;
}

.header-right {
	color: #ff5b5c;
	font-size: 14px;
	font-weight: bold;
	margin-left: 10px;
}

.member-content {
	margin-bottom: 10px;
}

.member-content {
	display: flex;
	align-items: center;
}

.info .avatar {
	width: 90rpx;
	height: 90rpx;
	overflow: hidden;
	border-radius: 50%;
	margin-left: -30rpx;
}

.info .avatar:first-child {
	margin-left: 0;
}

.member-reward {
	border: 1px solid #568690;
	border-top-left-radius: 6px;
	border-top-right-radius: 6px;
	display: grid;
	grid-template-columns: 30% 30% 40%;
}

.member-reward .item {
	display: flex;
	justify-content: center;
	align-items: center;
	border-right: 1px solid #568690;
	border-bottom: 1px solid #568690;
	padding: 5px;
}

.member-reward .item:nth-child(3n) {
	border-right: none;
}

.member-reward .item:nth-child(n+10) {
	border-bottom: none;
}

.member-reward .th {
	font-weight: bold;
}

.member-reward .phase {
	font-weight: bold;
}

.member-reward .money {
	color: #ff5b5c;
	font-weight: bold;
}

.remarks {
	color: #568690;
	padding: 10px 0;
	text-align: center;
	border: 1px solid #568690;
	border-top: none;
	border-bottom-left-radius: 6px;
	border-bottom-right-radius: 6px;
}

.other {
	display: flex;
	flex-direction: column;
	justify-content: center;
	font-size: 14px;
	padding-bottom: 70px;
}

.other-top {
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #f8f8f8;
	padding: 5px 0;
	margin: 0 20rpx;
}

.other-none {
	margin: 0 10px;
	padding: 10px 0;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #808080;
}

.top-left .text {
	color: #568690;
}

.top-right {
	color: #808080;
}

.fixed-bottom {
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 997;
	width: 100%;
	height: 70px;
	border-top: 1px solid #f8f8f8;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
	overflow: hidden;
	background-color: #ffffff;
}

.captain {
	display: flex;
	align-items: center;
	width: 40%;
}

.captain .avatar {
	width: 90rpx;
	height: 90rpx;
	overflow: hidden;
	border-radius: 50%;
	margin-right: 20rpx;
}

.info {
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.info-name {
	font-size: 16px;
	font-weight: bold;
}

.info-label {
	font-size: 14px;
	color: #808080;
}

.btns {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 60%;
}

.btn {
	color: #ffffff;
	font-size: 16px;
	font-weight: normal;
	border-radius: 0;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-radius: 4px;
	width: 48% !important;
	margin: 0 !important;
}

.btn .icon {
	font-size: 18px !important;
}

.btn-call {
	background-color: #fd911f;
}

.btn-invite {
	background-color: #568690;
}

.qr-code-icon {
	width: 70rpx;
	height: 70rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #ffffff;
	border-radius: 50%;
	position: fixed;
	right: 20rpx;
	bottom: 80px;
	background-color: #568690;
}

.qr-code-icon .icon {
	font-size: 22px !important;
}