.fixed-bottom {
  position: fixed;
  bottom: 0;
  z-index: 999;
  width: 100%;
  height: 70px;
  border-top: 1px solid #f8f8f8;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  overflow: hidden;
  background-color: #ffffff;
}

.left {
  display: flex;
  width: 40%;
  height: 100%;
  justify-content: flex-start;
}

.right {
  width: 60%;
  display: flex;
  height: 100%;
  justify-content: flex-end;
}

.left .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.info .name {
  font-size: 16px;
  font-weight: bold;
}

.info .identity {
  font-size: 14px;
  color: #808080;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.pic {
  width: 100%;
  height: 100%;
}

.cus-btn {
  color: #ffffff;
  border-radius: 6px;
  text-align: center;
  line-height: 49px;
  width: 100%;
}

.chat {
  background-color: #fd911f;
  margin-right: 10px;
}

.call {
  background-color: #568690;
}