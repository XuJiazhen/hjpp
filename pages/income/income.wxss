page {
	font-size: 14px;
}

.bill-status {
	height: 80rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #f8f8f8;
}

.status-item {
	flex: 1;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	transition: all .3s;
}

.active {
	color: #568690;
}

.bill-item {
	display: flex;
	height: 100rpx;
	margin: 0 20rpx;
	justify-content: space-between;
	align-items: center;
	background-color: #ffffff;
	box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, .5);
	margin-top: 20rpx;
	border-radius: 6px;
	overflow: hidden;
}

.bill-item text {
	flex: 1;
	display: flex;
	height: 100%;
	justify-content: center;
	align-items: center;
}

.money {
	color: #ff5b5c;
	font-weight: bold;
}

.status {
	color: #ffffff;
}

.wait {
	background-color: #7c8970;
}

.refused {
	background-color: #ff5b5c;
}

.paid {
	background-color: #07c160;
}

.failed {
	background-color: #939293;
}