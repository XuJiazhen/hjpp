@import '/assets/styles/iconfont.wxss';

page {
  background-color: #f8f8f8;
}

.bold {
  font-weight: bold;
}

.grey {
  color: #808080;
  font-size: 14px;
}

.section {
  background-color: #ffffff;
  margin-bottom: 10px;
  padding: 40rpx 20rpx;
}

.section:last-child {
  background-color: red;
}

.selections {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 10px;
  font-size: 14px;
}

.selection {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  color: #808080;
  border-radius: 3px;
  padding: 5px 7px;
  transition: all .3s;
}

.pictures {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

.picture{
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  position: relative;
}

.remove {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.icon {
  color: #ff0000;
}

.pic {
  width: 100%;
  height: 100%;
}

.title {
  margin-bottom: 40rpx;
}

.content {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 6px;
}

.btn-submit {
  margin: 40rpx 20rpx;
  height: 50px;
  border-radius: 25px;
  background-color: #c2c2c2;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom {
  background-color: #f8f8f8;
  height: 20px;
}

.active {
  color: #ffffff;
  background-color: #568690;
}