@import '/assets/styles/iconfont.wxss';

.container {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.tools {
	border-top: 10px solid #f8f8f8;
	border-bottom: 10px solid #f8f8f8;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 20rpx;
}

.tool-item {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.tool-item .icon-wrap {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #568690;
	box-sizing: border-box;
}

.tool-item .icon {
	font-size: 20px;
	color: #ffffff;
}

.tool-item .text {
	font-size: 14px;
	color: #808080;
	margin-top: 3px;
}