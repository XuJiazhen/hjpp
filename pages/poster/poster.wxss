@import '/assets/styles/iconfont.wxss';

.poster {
  width: 604rpx;
  height: 936rpx;
  margin: 0 auto;
  margin-top: 73rpx;
}

.pic {
  width: 100%;
  height: 100%;
}

.fixed-bottom {
  height: 140rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx 0;
}

.bottom-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.plain {
  margin: 0 !important;
  padding: 0 !important;
  border-radius: 0 !important;
  font-weight: normal !important;
  font-size: 16px !important;
  width: 90rpx !important;
  height: 90rpx !important;
  border-radius: 50% !important;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.plain text {
  color: #ffffff;
  font-size: 20px;
}

.text {
  margin-top: 10rpx;
  font-size: 14px;
  color: #808080;
}

.wechat {
  background-color: #4cbf00;
}

.download {
  background-color: #568690;
}